<div class="container">
  <div class="row">
    <div class="col-md-12">
<h1 class="text-center">Follower</h1>
<% if @users.exists? %>
  <table class="table table-hover table-inverse text-center">
    <thead>
      <tr class="table-danger">
        <th style="width: 10%;"></th>
        <th style="width: 10%;">ユーザー名</th>
        <th style="width: 60%;">イントロダクション</th>
        <th style="width: 10%;">フォロー数</th>
        <th style="width: 10%;">フォロワー数</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %></td>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td class="text-break"><%= user.introduction %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p style="font-size: 20px;">ユーザーはいません</p>
<% end %>
    </div>
  </div>
</div>