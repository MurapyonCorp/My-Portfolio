<div class="row">
  <div class="col-md-2">
    <h1>My Page</h1>
  </div>
  <div class="col-md-1 offset-md-9">
    <%= link_to edit_user_path(user), class:"fs-3" do %>
      <i class="fas fa-user-edit" style="color: black;"></i>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4 mt-3">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %>
  </div>
  <div class="col-md-7 offset-md-1">
    <!--ユーザー情報を表示させる-->
    <div class="row offset-md-1 mt-3 px-3">
      <div class="col-md-3">
        <%= link_to user_followings_path(user) do %>
          <p style="font-size: 20px;">フォロー&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= user.followings.count %></p>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to user_followers_path(user) do %>
          <p style="font-size: 20px;">フォロワー&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= user.followers.count %></p>
        <% end %>
      </div>
      <div class="col-md-1 offset-md-2">
        <%= link_to rooms_path, 'data-toggle': :tooltip, 'title': :"Rooms" do %>
          <i class="fas fa-inbox"></i>
        <% end %>
      </div>
    </div>
    <div class="row px-3">
      <div class="col-md-6">
        <p style="font-size: 20px;">ユーザー名</p>
      </div>
      <div class="col-md-6">
        <p style="font-size: 20px;"><%= user.name %></p>
      </div>
    </div>
    <div class="row px-3">
      <div class="col-md-6">
        <p style="font-size: 20px;">メールアドレス</p>
      </div>
      <div class="col-md-6">
        <p style="font-size: 20px;"><%= user.email %></p>
      </div>
    </div>
    <div class="row px-3">
      <div class="col-md-6">
        <p style="font-size: 20px;">自己紹介</p>
      </div>
      <div class="col-md-6">
        <p class="text-break" style="font-size: 20px;"><%= user.introduction %></p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-6">
    <h4 class="text-center">イベント</h4>
    <table class="table table-hover table-inverse text-center">
      <thead>
        <tr class="bg-info">
          <th>タイトル</th>
          <th>概要</th>
          <th>場所</th>
        </tr>
      </thead>
      <tbody>
        <% events.each do |event| %>
          <tr class="white">
            <td>
              <%= link_to event.title, event_path(event) %>
            </td>
            <td><%= event.body %></td>
            <td><%= event.location %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate events %>
  </div>
  <div class="col-6">
    <h4 class="text-center">タスク</h4>
    <table class="table table-hover table-inverse text-center">
      <thead>
        <tr class="bg-success" style="color: #fff;">
          <th>タスク</th>
          <th>詳細</th>
          <th>実施状況</th>
        </tr>
      </thead>
      <tbody>
        <% tasks.each do |task| %>
          <tr class="white">
            <td>
              <%= link_to task.title, task_path(task) %>
            </td>
            <td><%= task.body %></td>
            <td>
              <% if task.pratical == "実施済" %>
                <%= task.pratical %>
              <% else %>
                <p class="mb-0" style="color: red;"><%= task.pratical %></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate tasks %>
  </div>
</div>