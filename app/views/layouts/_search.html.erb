<div class="search-form">
  <%= form_with url: search_path, local:true, method: :get do |f| %>
    <%= f.text_field :word, :size => "20" %>
    <%= f.select :range, options_for_select([['User'], ['Event'], ['Task']]) %>
    <%= button_tag type: 'submit', class:"btn btn-default" do %>
      <i class="fas fa-search fs-4" style="color: #ed59ff;"></i>
    <% end %>
  <% end %>
</div>