<div class="search-form">
  <%= form_with url: search_path, local:true, method: :get do |f| %>
    <%= f.text_field :word, class:"form-control" %>
    <%= f.select :range, options_for_select([['User'], ['Event'], ['Task']]), class:"form-select" %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]), class:"form-select" %>
    <%= f.submit "検索", class:"btn btn-outline-info btn-sm" %>
  <% end %>
</div>