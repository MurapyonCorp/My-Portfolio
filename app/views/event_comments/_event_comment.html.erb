<table class="chat-table">
  <tr class="row justify-content-center">
    <td>
      <!-- 自分用の吹き出しCSSクラスを適用する -->
      <%= link_to event_event_comment_path(@event.id, event_comment), class:"btn-sm btn-danger float-end ms-3", method: :delete, remote:true do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
      <div class="says-event">
        <p class="chat-content"><%= event_comment.comment %></p>
      </div>
    </td>
    <td class="d-flex justify-content-end">
      <%= event_comment.created_at.strftime("%m/%d %H:%M") %>
    </td>
  </tr>
</table>